<h1>
<%= title %> 
</h1>
<section id="feed-posts">
    <h4>Posts</h4>
    <% if(locals.user) { %>
    <form action="/posts/create" id="new-post-form" method="POST">
        <textarea name="content" cols="30" rows="4" placeholder="typearea"></textarea>
        <input type="submit" value="Post">
    </form>
    <%  } %>
    <div id="posts-list-container">
        <ul>
        <% for(post of posts)  { %>
        <li><%= post.content %></li>
        <li><%= post.user.name %></li>
        <% } %>
        </ul>
    </div>
</section>
